<!DOCTYPE html>
<html>
  <head>
    <title>My Notepad</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="new-container">
      <div class="left">
        <h2 class="styling-text">Masukkan Catatan</h2>
        <form action="/new-note" method="POST" class="form-wrapper">
          <div class="form-group">
            <label for="title">Title</label>
            <input
              type="text"
              id="title"
              name="title"
              placeholder="Masukkan judul..."
              required
            />
          </div>

          <div class="form-group">
            <label for="description">Description</label>
            <textarea
              id="description"
              name="description"
              placeholder="Masukkan deskripsi..."
              rows="4"
              required
            ></textarea>
          </div>

          <button type="submit" class="btn-submit">Simpan</button>
        </form>
      </div>
      <div class="right container">
        <% if (notes.length === 0) { %>
        <p>Tidak ada catatan.</p>
        <% } %> <% notes.forEach(note => { %>
        <div class="notepad-card">
          <div class="notepad-header"></div>

          <div class="notepad-content">
            <h2><%= note.title %></h2>
            <p style="margin-bottom: 40px"><%= note.description %></p>
            <div class="">
              <a href="/new-note/edit/<%= note.id %>">
                <button class="btn-submit margin">Edit</button>
              </a>
              <form
                action="/new-note/delete/<%= note.id %>"
                method="POST"
                style="display: inline"
              >
                <button
                  class="btn-submit margin"
                  onclick="return confirm('Yakin ingin menghapus?')"
                >
                  Delete
                </button>
              </form>
            </div>
          </div>

          <div class="notepad-ring ring-1"></div>
          <div class="notepad-ring ring-2"></div>
          <div class="notepad-ring ring-3"></div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
